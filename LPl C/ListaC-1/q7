#include <stdio.h> 

int main(){
    float a, b, c, soma;
    
    printf("Digite um numero: ");
    scanf("%f", &a);
    
    printf("Digite um numero: ");
    scanf("%f", &b);
    
    printf("Digite um numero: ");
    scanf("%f", &c);
    
    soma = (a*a) + (b*b) + (c*c);
    printf("A soma dos quadrados dos numeros Ã©: %.0f", soma);
    
    return 0;
}